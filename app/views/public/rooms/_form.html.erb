<%= form_with model: room, url: public_rooms_path, local:true do |f| %>

  <%= f.label :部屋画像（３枚まで）, class: "mr-4" %>
  <%= f.file_field :images, class: "form-control-file image", accept: 'image/*', multiple: true %>

  <%= f.label :投稿タイトル, class: "mr-4" %>
  <%= f.text_field :title, placeholder: "タイトルを入力", class: "form-control name" %>

  <%= f.label :内容, class: "mr-4" %>
  <%= f.text_area :body, placeholder: "内容を入力", class: "form-control name" %>

  <%= f.label :カテゴリー, class: "mr-4" %>
  <% Category.all.each do |category| %>
   <%= check_box_tag 'room[category_ids][]', category.id, room.categories.include?(category) %>
   <%= category.name %>
  <% end %>

  <%= f.submit :投稿, class: 'btn btn-success btn-lg' %>
<% end %>