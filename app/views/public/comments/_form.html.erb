<!-- コメントフォームのコード -->
<div class="guest-form">
  <%= form_with model: [room, comment], url: public_room_path(room), local: true do |f| %>
    <%= f.text_area :comment, rows:'5', placeholder: "コメントをここに", class: "w-100" %>
  <%= f.submit "送信" %>
  <% end %>
  <div class="overlay">
   <div class="message">コメントは会員限定です</div>
  </div>
</div>