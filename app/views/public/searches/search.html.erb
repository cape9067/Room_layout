<div class="container-fluid">
  <div class="row">
    <div class="col-9 mt-4">
    	<div class="row">
      	<div class="col-md-6 h2 m-4 font-weight-bold">
          記事検索 -<%= params[:query] %>-<small><small>(全<%= @results.total_count %>件)</small></small>
        </div>
        <div class="col-md-4 mt-4 mx-5 text-right pt-1">
	        <div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle text-white" role="button" data-toggle="dropdown" aria-expanded="false">
              並び替え
            </a>
            <div class="dropdown-menu">
              <p class="dropdown-item"><%= link_to '新着順', public_search_path(sort: 'newest', query: params[:query]) %></p>
              <p class="dropdown-item"><%= link_to 'いいね数順', public_search_path(sort: 'likes', query: params[:query]) %></p>
              <p class="dropdown-item"><%= link_to 'ブックマーク数順', public_search_path(sort: 'bookmarks', query: params[:query]) %></p>
            </div>
          </div>
        </div>
      </div>

	<hr>

	<div class="row" id="room-index">
	  <% if @results.empty? %>
  	    <p class="font-weight-bold">検索した記事は見つかりませんでした。</p>
	  <% else %>
         <%= render 'public/rooms/index', rooms: @results %>
        <% end %>
      </div>

	<div class="d-flex justify-content-center">
        <%= paginate @results, theme: 'bootstrap-5' %>
      </div>
    </div>

    <div class="col-md-3 p-4">
	<%= render 'public/rooms/side', categories: @categories, rooms: @latest_rooms %>
    </div>
  </div>
</div>