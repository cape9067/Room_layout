<div class="container-fluid">
  <div class="row">
    <div class="col-9 mt-4">
      <div class="row">
      	<div class="col-md-6 h2 m-4 font-weight-bold">
        カテゴリ検索 -<%= @category.name %>-<small><small>(全<%= @rooms.total_count %>件)</small></small>
        </div>
        <div class="col-md-4 mt-4 mx-5 text-right pt-1">
	        <div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle text-white" role="button" data-toggle="dropdown" aria-expanded="false">
              並び替え
            </a>
            <div class="dropdown-menu">
              <p class="dropdown-item"><%= link_to '新着順', public_category_search_path(sort: 'newest', category_id: params[:category_id]) %></p>
              <p class="dropdown-item"><%= link_to 'いいね数順', public_category_search_path(sort: 'likes', category_id: params[:category_id]) %></p>
              <p class="dropdown-item"><%= link_to 'ブックマーク数順', public_category_search_path(sort: 'bookmarks', category_id: params[:category_id]) %></p>
            </div>
          </div>
        </div>
      </div>

	    <hr>

      <div class="row" id="room-index">
        <% if @rooms.empty? %>
  	      <p class="font-weight-bold d-flex justify-content-center">検索した記事は見つかりませんでした。</p>
		    <% else %>
          <%= render 'public/rooms/index', rooms: @rooms %>
        <% end %>
      </div>

      <div class="d-flex justify-content-center">
        <%= paginate @rooms, theme: 'bootstrap-5' %>
      </div>
    </div>

    <div class="col-md-3 p-4">
	    <%= render 'public/rooms/side', categories: @categories, rooms: @latest_rooms %>
    </div>
  </div>
</div>