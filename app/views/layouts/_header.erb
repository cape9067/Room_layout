<header style= "background-color: #8C5A2B;", class="shadow">

    <div class="container-fluid">

      <div class="col-1">
       rogo
      </div>


      <div class="col-11">
        <div class="row">
          <div class="col-12">
            <div class="d-flex justify-content-end mb-2">
              <% if admin_signed_in? %>
                <%= render 'layouts/admin_header' %>
              <% elsif user_signed_in? %>
                <li class="d-flex mr-4">
                  <%= link_to public_user_path(current_user), class: "btn btn-danger" do %>
                    マイページ
                  <% end %>
                </li>
                <li class="d-flex mr-4">
                  <%= link_to  public_rooms_path, class: "btn btn-danger" do %>
                    投稿一覧
                  <% end %>
                </li>
                <li class="d-flex mr-4">
                  <%= link_to  public_user_bookmarks_path(current_user), class: "btn btn-danger" do %>
                    マイリスト
                  <% end %>
                </li>
                <li class="d-flex">
                  <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-danger" do %>
                    ログアウト
                  <% end %>
                </li>
              <% else %>
                <li class="d-flex mr-4">
                  <%= link_to new_user_registration_path,class: "btn btn-danger" do %>
                    新規登録
                  <% end %>
                </li>
                <li class="d-flex">
                  <%= link_to new_user_session_path ,class: "btn btn-danger" do %>
                    ログイン
                  <% end %>
                </li>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
