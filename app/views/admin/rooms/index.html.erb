<div class="container">
  <%= render 'layouts/flash'%>
  <div class="row">
    <div class="my-5">

      <table class='table table-hover table-inverse table-light table-fixed' width="100%">
        <thead class="table-dark">
          <tr>
            <th width="5%">ID</th>
            <th width="10%">投稿者</th>
            <th width="20%">タイトル</th>
            <th width="40%">内容</th>
            <th width="20%">投稿時間</th>
            <th width="5%"></th>
          </tr>
        </thead>

        <tbody>
         <% @rooms.each do |room| %>
          <tr>
            <td><%= room.id %></td>
            <td><%= room.user.name %></td>
            <td style="word-wrap:break-word;">
              <%= link_to admin_room_path(room) do %>
                <%= room.title %>
              <% end %>
            </td>
            <td style="word-wrap:break-word;"><%= room.body %></td>
            <td><%= room.created_at.strftime("%Y-%m-%d / %H:%M:%S") %></td>
            <td class="text-center">
              <%= link_to admin_room_path(room), method: :delete, class: "btn btn-success btn-sm" do%>
                削除
              <% end %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <p>
      <%= paginate @rooms, theme: 'bootstrap-5' %>
    </p>
  </div>

</div>