<div class="container">
  <%= render 'layouts/flash'%>
  <div class="row">
    <div class="my-5">
      <table class='table table-hover table-inverse table-light table-fixed' width="100%">
        <thead class="table-dark">
          <tr>
            <th width="10%">投稿者</th>
            <th width="40%">内容</th>
            <th width="20%">コメントした投稿</th>
            <th width="20%">投稿時間</th>
            <th width="10%">削除ボタン</th>
          </tr>
        </thead>
        <tbody>
         <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.user.name %></td>
            <td style="word-wrap:break-word;"><%= comment.comment %></td>
            <td><%= comment.room.title %></td>
            <td><%= comment.created_at.strftime("%Y-%m-%d / %H:%M:%S") %></td>
            <td class="text-center">
              <%= link_to admin_comment_path(comment), method: :delete, class: "btn btn-success btn-sm" do%>
                削除
              <% end %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>